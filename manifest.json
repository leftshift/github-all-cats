{
  "name": "GitHub All Cats",
  "description": "Anonymize other GitHub users",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "version": "1.2.2",
  "permissions": [
    "activeTab",
    "tabs", "https://github.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Toggle using cat names on GitHub"
  },
  "content_scripts" : [
    {
      "matches" : [
         "https://github.com/*"
      ],
      "js" : [ "contentscript.js" ],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
  "manifest_version": 2
}
